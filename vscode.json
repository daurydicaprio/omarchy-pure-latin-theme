{
    "workbench.colorCustomizations": {
        /* Core Backgrounds */
        "editor.background": "#0F1115",
        "sideBar.background": "#0A0C0F",
        "activityBar.background": "#0A0C0F",
        "titleBar.activeBackground": "#0F1115",
        "terminal.background": "#0F1115",
        
        /* Text and Accents */
        "editor.foreground": "#E2E4E9",
        "terminal.foreground": "#E2E4E9",
        
        /* Status Bar (Industrial Style: Dark with White text) */
        "statusBar.background": "#1A1D23",
        "statusBar.foreground": "#FFFFFF",
        "statusBar.border": "#363B46",

        /* Selection and Focus */
        "list.activeSelectionBackground": "#363B46",
        "list.activeSelectionForeground": "#FFFFFF",
        "editor.selectionBackground": "#363B46A0",
        
        /* Tabs */
        "tab.activeBackground": "#0F1115",
        "tab.activeForeground": "#FFFFFF",
        "tab.inactiveBackground": "#0A0C0F",
        "tab.inactiveForeground": "#636975"
    }
}
